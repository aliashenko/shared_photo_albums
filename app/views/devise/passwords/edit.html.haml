.login-container.z-depth-1
  .login-title Change your password
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: 'col s12 m12 l9 offset-l1') do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    .input-field
      = f.label :password, "New password"
      = f.password_field :password, autofocus: true, autocomplete: "off"
    .input-field
      = f.label :password_confirmation, "Confirm new password"
      = f.password_field :password_confirmation, autocomplete: "off"
    .row
      .col.s12
        = f.submit "Change my password", :class => "btn-large col s8 offset-s2"
  = render "devise/shared/links"
