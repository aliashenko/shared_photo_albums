<p>
  <strong>Name:</strong>
  <%= @album.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @album.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @album.user.first_name %>
</p>

<%= render @photos %>

<p>
  <% if can? :manage, @album %>
    <%= link_to 'Add a Photo', new_album_photo_path(@album) %> |
    <%= link_to 'Edit', edit_album_path(@album) %> |
  <% end %>
  <%= link_to 'Back', albums_path %>
</p>
